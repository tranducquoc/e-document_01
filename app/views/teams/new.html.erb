<% if @organization.has_member? current_user %>
  <div class="row">
    <div class="col-md-8 ">
      <%= form_for [@team.organization, @team] do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.submit t("team.submit"), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>
