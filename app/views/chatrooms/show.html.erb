<%= provide :title, @chatroom.title %>
<h1><%= @chatroom.title %></h1>
<div id="messages" data-chatroom-id="<%= @chatroom.id %>">
  <div class="row">
    <div class="col-md-12">
      <ul id="chat-box" class="messages">
        <%= render @chatroom.messages %>
      </ul>
    </div>
  </div>
  <div class="send_box">
    <%= form_for @message, url: "#", class: "inline-form" do |f| %>
      <div class="form-group">
        <%= f.label :message %>
        <%= f.text_field :body, class: "form-control" %>
        <small class="text-muted"><%= t "min_2_characters" %></small>
      </div>
      <div class="send_message">
        <%= f.submit t("messenger.send"), class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
